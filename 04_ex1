// C : Structure based, C++ : class based
#include <stdio.h>


main()
{

// Note that there is no string class in C.
  char c = 'a' , s[] = "hello";
  int i = 100; long l = 99999;
  float f = 3.14; double d = 99.999;
  int *p &i;
  
// %c : character, %s : string, %d : decimal(int), %x : Hexa-decimal(x: 소문자, X : 대문자, # : 0X 출력)
// %ld : long decimal, %f : float, %lf : double, %p : pointer
  printf("Output : %c %s %d %#x %ld %.4f %.21f %p \n" , c,s,i,i,l,f,d,p);
  
// == printf(%c, c);
  putchar(c);
  
// == printf(%s, s);
  puts(s)
  
  
}
